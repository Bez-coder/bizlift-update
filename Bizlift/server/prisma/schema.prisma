generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  products  Product[] // relation: a user can post many products
}

model Product {
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  type          String
  price         Float
  photoUrl      String
  contactPhone  String
  socialMedia   String?   // optional
  createdAt     DateTime  @default(now())
  sellerId      Int
  seller        User      @relation(fields: [sellerId], references: [id])
}
